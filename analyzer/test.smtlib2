(set-option :smt.relevancy 0)
(set-option :produce-models true)

(declare-const f Float32)
(declare-const bv (_ BitVec 32))
(declare-const arr (Array (_ BitVec 32) (_ BitVec 16)))

(assert (= f ((_ to_fp 8 24) RNE 3.14 0)))
(assert (= arr (store arr #x00000000 ((_ extract 15 0) bv)) ))
(assert (= arr (store arr #x00000001 ((_ extract 31 16) bv)) ))
(assert (= f ((_ to_fp 8 24) bv)))

(check-sat)
(get-value ((select arr #x00000000)))
(get-value ((select arr #x00000001)))
(get-value (f))
